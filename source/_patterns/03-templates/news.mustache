<div class="content cf has-aside" role="document">
  {{> organisms-header }}
  <main class="main" role="main">
    {{> organisms-page-header }}
    {{> molecules-article-navigation }}
    <div class="layout-container full--until-large">
      <div class="flex-container cf">
        <div class="shift-left--fluid column__primary bg--white no-pad--top no-pad--btm">
          {{# news_home }}
            {{> organisms-news-content }}
          {{/ news_home }}
          {{# news_channel }}
            {{> organisms-news-channel-content }}
          {{/ news_channel }}
          {{# news_article }}
            {{> organisms-news-article-content }}
          {{/ news_article }}
        </div> <!-- /.shift-left--fluid -->
        <div class="shift-right--fluid bg--beige">
          {{> molecules-aside-navigation }}
          <div class="column__secondary">
            {{> organisms-aside }}
          </div>
        </div> <!-- /.shift-right--fluid -->
      </div> <!-- /.flex-container -->
    </div> <!-- /.layout-container -->
  </main> <!-- /.main -->
  {{> organisms-footer }}
</div> <!-- /.content -->
