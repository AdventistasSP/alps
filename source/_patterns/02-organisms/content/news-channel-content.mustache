<div class="g g-2up--at-medium with-divider">
  {{# media_blocks }}
    <div class="gi">
      <div class="spacing">
        {{# column_heading }}
          <div class="spacing--half">
            <h2 class="font--tertiary--l theme--primary-text-color pad pad-double--top pad-half--btm">{{ column_heading }}</h2>
            <hr>
          </div>
        {{/ column_heading }}
        <div class="pad">{{> molecules-media-block }}</div>
        {{# has_hr }}<hr>{{/ has_hr }}
      </div>
    </div> <!-- /.gi -->
  {{/ media_blocks }}
  {{# media_blocks_2 }}
