<header class="header {{ header_class }} can-be--dark-dark" role="banner" id="header">
  <div class="header__top-hat show-at--large bg--black pad-half align--right">
    <span class="icon icon__logo">{{> atoms-icon-logo(fill_class: 'fill--white') }}</span>
    <p class="font--secondary--xs gray--med">This is an official website of the Seventh-day Adventist Church. <a class="link--white" href="">Learn More about Adventists</a>.</p>
  </div> <!-- /.header__top-hat -->
  <div class="header__inner">
    {{> molecules-navigation-toggle }}
    <div class="header__unify-logo-nav">
      <a href="/" class="logo__link logo__link--horiz theme--primary-background-color show-until--large {{# logo_bottom_text }} logo--with-text {{/ logo_bottom_text }}">
        {{> atoms-logo-horiz }}
        {{# logo_bottom_text }}
          <span class="logo__text"><img src="{{ image_path }}{{ logo_text }}" class="logo__text" alt="{{ head.title }} logo" /></span>
        {{/ logo_bottom_text }}
      </a>
      <a href="/" class="logo__link logo__link--square theme--primary-background-color show-at--large {{# logo_bottom_text }} logo--with-text {{/ logo_bottom_text }}">
        {{> atoms-logo-square }}
        {{# logo_bottom_text }}
          <span class="logo__text"><img src="{{ image_path }}{{ logo_text }}" class="logo__text" alt="{{ head.title }} logo" /></span>
        {{/ logo_bottom_text }}
      </a>
      {{> molecules-primary-navigation }}
    </div> <!-- /.header__unify-logo-nav -->
    <div class="header__utility">
      <div class="header__utility__inner full--until-large">
        {{> molecules-secondary-navigation }}
        {{> molecules-search }}
      </div>
    </div> <!-- /.header__utility -->
  </div> <!-- /.header__inner -->
</header> <!-- .header -->

