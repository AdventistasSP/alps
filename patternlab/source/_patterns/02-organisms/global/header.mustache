<header class="header {{ header_class }}" role="banner" id="header">
  {{> molecules-navigation-toggle }}
  <div class="header__top-hat show-at--large bg--black pad-half align--right">
    <span class="icon icon__logo">{{> atoms-icon-logo(fill_class: 'fill--white') }}</span>
    <p class="font--secondary--xs gray--med">This is an official website of the Seventh-day Adventist Church. <a class="link--white" href="">Learn More about Adventists</a>.</p>
  </div> <!-- /.header__top-hat -->
  <div class="header__inner">
    <div class="header__unify-logo-nav">
      <a href="/" class="logo__link logo__link--horiz theme--primary-transparent-background-color show-until--large">{{> atoms-logo-horiz }}</a>
      <a href="/" class="logo__link logo__link--square theme--primary-transparent-background-color show-at--large">{{> atoms-logo-square }}</a>
      {{> molecules-primary-navigation }}
    </div> <!-- /.header__unify-logo-nav -->
    <div class="header__utility">
      <div class="layout-container header__utility__inner full--until-large">
        {{> molecules-secondary-navigation }}
        {{> molecules-search }}
      </div>
    </div> <!-- /.header__utility -->
  </div> <!-- /.header__inner -->
</header> <!-- .header -->
