
<div class="layout-container layout-container--s pad-double">
<form class="spacing" action="index.html" method="post">
    <div class="spacing--quarter">
        <h2 class="font--secondary--l theme--primary-text-color">Form header</h2>
        <hr />
    </div>
    <p class="spacing--quarter">
      <label class="font--secondary--s" for="">Name</label>
      <input type="text" name="name" value="">
    </p>
    <p class="spacing--quarter">
      <label class="font--secondary--s" for="">Form <span class="type-alpha--s text-color--gray">(Optional)</span></label>
      <input type="text" name="name" value="">
    </p>
    <p class="spacing--quarter">
        <label class="font--secondary--s red" for="">Error Label</label>
        <input class="has-error" type="text" name="name" value=""> <br>
        <small class="font--secondary--s red">This field is required</small>
    </p>
    <p class="spacing--quarter">
        <label class="font--secondary--s" for="">Your Comments</label>
        <textarea name="name" rows="8" cols="40">Enter a comment.</textarea>
    </p>
    <div class="form__checkbox spacing--quarter">
    <p class="font--secondary--s">Select many options</p>

    <p class="inline-form-element--row"><input type="checkbox" name="option" value="one"> <label class="font--secondary--s" for="">Option 1</label></p>
    <p class="inline-form-element--row"><input type="checkbox" name="option" value="two"> <label class="font--secondary--s" for="">Option 2</label></p>
    <p class="inline-form-element--row"><input type="checkbox" name="option" value="three"> <label class="font--secondary--s" for="">Option 3</label></p>
  </div>

  <div class="form__radio spacing--quarter">
    <p class="font--secondary--s">Select one option</p>

    <p class="inline-form-element--row"><input type="radio" name="option" value="one" checked> <label class="font--secondary--s" for="">Option 1</label></p>
    <p class="inline-form-element--row"><input type="radio" name="option" value="two"> <label class="font--secondary--s" for="">Option 2</label></p>
    <p class="inline-form-element--row"><input type="radio" name="option" value="three"> <label class="font--secondary--s" for="">Option 3</label></p>
  </div>

  <div class="form__select spacing--half">
    <label class=" font--secondary--s" for="">Select from this list</label>
    <select>
        <option value="one">Option 1</option>
        <option value="two">Option 2</option>
        <option value="three">Option 3</option>
        <option value="four">Option 4</option>
    </select>
  </div>

    <input type="submit" value="Submit form" />
    <input class="btn bg--gray" type="reset" value="Cancel" />
</form>
