{{# carousel }}
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.css"/>
<div class="carousel rel">
  <div class="carousel__slides {{ css-class }}">
    {{# slides }}
      {{> molecules-slide }}
    {{/ slides }}
  </div> <!-- /.carousel__slides -->
  <div class="carousel__controls">
    <span class="arrow__prev"><span class="carousel__arrow carousel__arrow--prev icon round">{{> atoms-icon-arrow-left }}</span></span>
    <span class="arrow__next"><span class="carousel__arrow carousel__arrow--next icon round">{{> atoms-icon-arrow-right }}</span></span>
  </div> <!-- /.carousel__controls -->
</div> <!-- /.carousel -->
{{/ carousel }}
