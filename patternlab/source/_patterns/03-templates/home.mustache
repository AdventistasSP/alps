<div class="content cf has-aside" role="document">
  {{> organisms-header }}
  <main class="main" role="main">
    {{> organisms-hero-carousel }}
    <div class="layout-container full--until-large">
      <div class="flex-container cf">
        <div class="shift-left--fluid column__primary bg--white">
          {{> organisms-body-content }}
        </div> <!-- /.shift-left--fluid -->
        <div class="shift-right--fluid bg--beige">
          {{# breakout_block }}
            {{> molecules-media-block }}
          {{/ breakout_block }}
          <div class="column__secondary">
            {{> organisms-aside }}
          </div>
        </div> <!-- /.shift-right--fluid -->
      </div> <!-- /.flex-container -->
    </div> <!-- /.layout-container -->
  </main> <!-- /.main -->
  {{> organisms-footer }}
</div> <!-- /.content -->
